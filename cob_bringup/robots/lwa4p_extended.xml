<?xml version="1.0"?>
<launch>

    <!-- args -->
    <arg name="robot" value="lwa4p_extended"/>
    <arg name="component_name" value="arm"/>
    <arg name="sim" default="false"/>
    
    <!-- upload robot description -->
    <include file="$(find cob_hardware_config)/upload_robot.launch">
        <arg name="robot" value="$(arg robot)"/>
    </include>
    
      <!-- default robot config -->
  <rosparam ns="/script_server/arm" command="load" file="$(find schunk_lwa4p_extended)/config/joint_configurations.yaml" />
    
        <include file="$(find cob_bringup)/components/canopen_generic.launch">
            <arg name="robot" value="$(arg robot)"/>
            <arg name="component_name" value="arm"/>
            <arg name="can_device" value="can3"/>
            <arg name="sim" value="$(arg sim)"/>
            <arg if="$(arg sim)" name="cartesian_control" value="true"/>
            <arg if="$(arg sim)" name="twist_control" value="false"/>
            <arg if="$(arg sim)" name="nmpc_control" value="true"/>
        </include>
  
    <!--<node name="visualization" pkg="rviz" type="rviz" output="screen" />  -->
  
</launch>